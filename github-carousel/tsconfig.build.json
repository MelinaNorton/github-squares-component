{
  "extends": "./tsconfig.json",
  "compilerOptions": {

    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    
    "outDir": "dist",
    "rootDir": "src",

    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
